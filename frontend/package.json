{
  "name": "blackfyre-hud",
  "version": "0.0.6",
  "description": "Blackfyre RPG HUD Overlay for Second Life",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "dev:test": "electron-vite dev -- --user-data-dir=%APPDATA%/blackfyre-hud-test",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "pack": "node build-signed.js",
    "pack:unsigned": "electron-vite build && electron-builder --win nsis -c.win.azureSignOptions=null",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.blackfyre.hud",
    "productName": "Dragon's Dominion",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "resources/images/art/appIcon.png",
      "!node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/images/art/appIcon.png",
      "azureSignOptions": {
        "endpoint": "https://eus.codesigning.azure.net",
        "certificateProfileName": "DD-SL",
        "codeSigningAccountName": "DragonsDominion",
        "publisherName": "William Saunders"
      }
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "DragonsDominion-${version}-setup.exe"
    },
    "publish": {
      "provider": "github",
      "owner": "WES4MU089",
      "repo": "Blackfyre"
    }
  },
  "dependencies": {
    "electron-updater": "^6.3.9",
    "pinia": "^2.3.0",
    "socket.io-client": "^4.8.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "electron": "^33.3.1",
    "electron-builder": "^26.7.0",
    "electron-vite": "^5.0.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.0"
  }
}
