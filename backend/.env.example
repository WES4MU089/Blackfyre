# Blackfyre HUD Backend Environment Configuration
# Copy this file to .env and update with your settings

# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# Database Configuration (MariaDB)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=blackfyre_hud
DB_CONNECTION_LIMIT=10

# Second Life Integration
SL_REGION_SECRET=your-secret-key-here
SL_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Discord OAuth
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_REDIRECT_URI=http://localhost:3000/api/auth/discord/callback

# JWT Authentication
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRES_IN=24h

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/blackfyre.log

# WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_RECONNECT_TIMEOUT=5000
